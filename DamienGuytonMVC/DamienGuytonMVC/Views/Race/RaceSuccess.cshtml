@model List<DamienGuytonMVC.Models.Horse>

@{
    ViewBag.Title = "RaceSuccess";
}

<h1>Race Results</h1>
<table>
    <tr>
        <th>Race Placing</th>
        <th>Horse</th>
        <th>Player</th>
        <th>Winnings</th>
        <th>Sweepstake Placing</th>
    </tr>
    @for (int i = 0; i < Model.Count; i++)
    {
        <tr>
            <td>@Model[i].Placing</td>
            <td>@Model[i].Name</td>
            <td>@Model[i].Player.FirstName @Model[i].Player.LastName</td>
            <td>@ViewBag.WinningColumn[i]</td>
            <td>@(i+1)</td>
        </tr>		    
    }
</table>
